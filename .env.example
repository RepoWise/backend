# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# ChromaDB Configuration
CHROMA_PERSIST_DIR=../chromadb
CHROMA_COLLECTION_NAME=governance_docs

# Embedding Model (MRL-compatible)
# Options:
#   - tomaarsen/mpnet-base-nli-matryoshka (768-dim, MRL-enabled, RECOMMENDED)
#   - sentence-transformers/all-MiniLM-L6-v2 (384-dim, faster but less accurate)
EMBEDDING_MODEL=tomaarsen/mpnet-base-nli-matryoshka

# Matryoshka Representation Learning (MRL) Configuration
# MRL enables two-stage search: fast 128-dim shortlist â†’ precise 768-dim rerank
MRL_ENABLED=True
MRL_DIMENSIONS=[128, 256, 768]
MRL_SHORTLIST_DIM=128
MRL_RERANK_DIM=768
MRL_SHORTLIST_K=50

# Application Configuration
APP_NAME=OSSPREY-GOV-POC
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=False

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-ngrok-url.ngrok-free.dev","https://repowise.netlify.app"]

# Cache Configuration
CACHE_DIR=../data/cache
CACHE_TTL_SECONDS=86400

# Rate Limiting
GITHUB_RATE_LIMIT_THRESHOLD=100
RATE_LIMIT_BACKOFF_SECONDS=60
